{
  "author": "Marco Castelluccio",
  "manifest_version": 2,
  "name": "Gecko Code Coverage",
  "version": "0.10.1",
  "icons": {
    "270": "coverage.jpg"
  },
  "description": "Extension that augments several Mozilla websites (DXR, Searchfox) with code coverage information.",
  "content_scripts": [
    {
      "matches": ["*://dxr.mozilla.org/mozilla-central/source/*"],
      "js": ["supported_extensions.js", "config.js", "coverage.js", "dxr-common.js", "button.js", "dxr.js"],
      "css": ["dxr.css", "spinner.css"],
      "run_at": "document_end"
    },
    {
      "matches": ["*://searchfox.org/mozilla-central/source/*"],
      "js": ["supported_extensions.js", "config.js", "coverage.js", "dxr-common.js", "button.js", "searchfox.js"],
      "css": ["dxr.css", "spinner.css"],
      "run_at": "document_end"
    },
    {
      "matches": ["*://crash-stats.mozilla.com/report/index/*"],
      "js": ["supported_extensions.js", "config.js", "coverage.js", "socorro.js"],
      "css": ["spinner.css", "socorro.css"],
      "run_at": "document_end"
    },
    {
      "matches": ["*://hg.mozilla.org/mozilla-central/file/*",
                  "*://hg.mozilla.org/mozilla-central/annotate/*"],
      "js": ["supported_extensions.js", "config.js", "coverage.js", "button.js", "hgmo.js"],
      "css": ["spinner.css", "dxr.css"],
      "run_at": "document_end"
    }
  ],
  "permissions": [
    "https://coverage.testing.moz.tools/v2/*",
    "https://mapper.mozilla-releng.net/gecko-dev/rev/git/*",
    "https://hg.mozilla.org/mozilla-central/json-rev/*"
  ],
  "homepage_url": "https://github.com/mozilla/code-coverage-addon"
}
